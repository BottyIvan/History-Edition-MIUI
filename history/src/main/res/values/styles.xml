<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Botty" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:customNavigationLayout">@layout/nav_bar</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:displayOptions">disableHome|showCustom</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:textColor">@color/btn_action</item>
    </style>

    <style name="ActionButton.ITALICTEXT" parent="@android:style/Widget.ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:textColor">@color/btn_action</item>
    </style>

    <style name="cardnow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card</item>
    </style>


</resources>